body.shopping-page {
 /** background-image: url(<%= asset_path 'splash.jpg' %>); */
  max-width: 90m;
}

body.shopping-page .shopping-list { background-color: rgba(0, 0, 0, 0.20); }

body.shopping-page .highlight { color: orange; }
body.shopping-page button { border: 1px solid blue; }

body.shopping-page h4 { color: orange; }

body.shopping-page div.tabulator-row:last-child,
body.shopping-page div.tabulator-row:nth-last-child(2) {
  background-color: #e9fafd;
}

.small-thumbnail { width: 5em; }

.thumbnail { width: 10em; }

.shopping-list {
  display: grid;
  grid-template-columns: 2fr 1fr;
  height: 40em;
}

/** redundant, get rid of this */
.mini-grid {
  max-height: 90vh;
  overflow-y: scroll;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.gridable {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr 1fr;
}

/* // */

.cards {
  display: grid;
  max-height: 90vh;
  overflow-y: scroll;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20px;
}

.card {
  display: grid;
  grid-template-rows: max-content 200px 1fr;
}

.card img {
  object-fit: cover;
  width: 100%;
  height: 100%;
}